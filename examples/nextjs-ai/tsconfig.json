{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@sqlrooms/ui/*": ["../../packages/ui/src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "../../packages/ai/src/AnalysisResult.tsx",
    "../../packages/ai/src/AnalysisResultsContainer.tsx",
    "../../packages/ai/src/QueryControls.tsx",
    "../../packages/ai/src/ToolCall.tsx",
    "../../packages/ai/src/ToolResult.tsx",
    "../../packages/vega/src/vega-lite-chart.tsx"
  ],
  "exclude": ["node_modules"]
}
