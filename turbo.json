{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "publish": {
      "dependsOn": ["build", "test", "lint"],
      "outputs": ["packages/*/dist"]
    },
    "publish-preview": {
      "dependsOn": ["build", "test", "lint"],
      "outputs": ["packages/*/dist"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["packages/*/dist"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {},
    "test:watch": {
      "cache": false
    }
  }
}
